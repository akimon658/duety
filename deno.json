{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "dev": "deno run -A --env-file --watch=static/,main.tsx dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno run -A main.tsx",
    "preview": "deno run -A main.tsx",
    "db:generate": "deno run -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrate": "deno run -A --node-modules-dir npm:drizzle-kit migrate",
    "db:push": "deno run -A --node-modules-dir npm:drizzle-kit push",
    "db:studio": "deno run -A --node-modules-dir npm:drizzle-kit studio"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "imports": {
    "@/": "./",
    "@fresh/core": "jsr:@fresh/core@^2.2.0",
    "@fresh/core/dev": "jsr:@fresh/core@^2.2.0/dev",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^1.0.0",
    "preact": "npm:preact@^10.27.2",
    "preact/jsx-runtime": "npm:preact@^10.27.2/jsx-runtime",
    "preact/hooks": "npm:preact@^10.27.2/hooks",
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@std/http": "jsr:@std/http@^1.0.22",
    "daisyui": "npm:daisyui@^5.5.5",
    "drizzle-kit": "npm:drizzle-kit@^0.31.7",
    "drizzle-orm": "npm:drizzle-orm@^0.44.7",
    "drizzle-orm/mysql2": "npm:drizzle-orm@^0.44.7/mysql2",
    "drizzle-orm/mysql-core": "npm:drizzle-orm@^0.44.7/mysql-core",
    "googleapis": "npm:googleapis@^166.0.0",
    "ical.js": "npm:ical.js@^2.2.1",
    "mysql2": "npm:mysql2@^3.15.3",
    "mysql2/promise": "npm:mysql2@^3.15.3/promise",
    "tailwindcss": "npm:tailwindcss@^3.4.17",
    "tailwindcss/plugin": "npm:tailwindcss@^3.4.17/plugin.js"
  },
  "exclude": [
    "**/_fresh/*",
    "node_modules"
  ]
}
